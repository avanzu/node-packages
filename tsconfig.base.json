{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "ES6",
        "types": ["node","jest"],
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}