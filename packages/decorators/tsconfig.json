{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    // "incremental": true,
    // "tsBuildInfoFile": "./dist/incremental.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/tests/*": ["./__tests__/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src", "__tests__"]
}
