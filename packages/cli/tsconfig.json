{
  "extends": "../../tsconfig.base.json",
  "include": ["src", "__tests__"],
  "compilerOptions": {
    "noEmit": true,
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/tests/*": ["./__tests__/*"],
      "~/*": ["./src/*"]
    }
  }
}
