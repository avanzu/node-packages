{
    "name": "@avanzu/foundation",
    "version": "1.1.0",
    "description": "",
    "main": "dist/index.js",
    "private": true,
    "scripts": {
        "prebuild": "rimraf ./dist",
        "build": "tsc --project tsconfig.build.json",
        "postbuild": "tsc-alias -p tsconfig.build.json",
        "test": "jest",
        "test:integration": "jest --config=jest.integration.config.js",
        "lint": "eslint . ",
        "jest": "jest",
        "format": "prettier --write .",
        "dev": "nodemon --exec 'tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json && node ./dist/main.js'",
        "dev:debug": "nodemon --exec 'tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json && node --inspect=0.0.0.0:${DEBUG_PORT} ./dist/main.js'",
        "start": "node dist/main.js"
    },
    "author": "",
    "license": "ISC",
    "nodemonConfig": {
        "ext": "js,json,ts",
        "ignore": [
            "coverage/",
            "dist/",
            "__tests__/"
        ]
    },
    "dependencies": {
        "@avanzu/decorators": "^1.1.3",
        "@avanzu/kernel": "^1.1.0",
        "@koa/bodyparser": "^5.1.0",
        "@koa/cors": "^5.0.0",
        "archiver": "^7.0.1",
        "awilix": "^10.0.2",
        "awilix-koa": "^10.1.0",
        "awilix-manager": "^5.2.1",
        "config": "^3.3.11",
        "http-status-codes": "^2.3.0",
        "inversify": "^6.0.2",
        "koa": "^2.15.2",
        "koa-helmet": "^7.0.2",
        "koa-pino-logger": "^4.0.0",
        "koa-qs": "^3.0.0",
        "koa-router": "^12.0.1",
        "pino": "^8.21.0",
        "reflect-metadata": "^0.2.1",
        "typedi": "^0.10.0"
    },
    "devDependencies": {
        "@types/koa": "^2.15.0",
        "@types/koa__cors": "^5.0.0",
        "@types/koa-router": "^7.4.8",
        "@types/supertest": "^6.0.2",
        "bun-types": "latest",
        "supertest": "^7.0.0"
    }
}
